<script type="text/javascript" src="http://js.omxcontent.com/dl.min.js"></script>
<% if @product.mac && @product.windows %>
  <% if @os == 'mac' %>
    <% alternative = 'Windows' %>
    <% download_link = @download_link_mac %>
    <% alternative_link = @download_link_windows %>
  <% else %>
    <% alternative = 'Mac' %>
    <% download_link = @download_link_windows %>
    <% alternative_link = @download_link_mac %>
  <% end %>
  <%= link_to "DOWNLOAD FOR #{@os.upcase}", 'javascript:;', class: 'download-link', target: '_blank', onclick: "gtag_report_conversion('#{download_link}', '#{@download_type}')" %>
  <% if action_name == 'lp' %>
    <div class="compatibility">
      <span>Compatible with:</span>
      <%= link_to 'javascript:;', target: '_blank', onclick: "gtag_report_conversion('#{download_link}', '#{@download_type}')" do %>
        <i class="fa fa-apple"></i>
      <% end %>
      <%= link_to 'javascript:;', target: '_blank', onclick: "gtag_report_conversion('#{alternative_link}', '#{@download_type}')" do %>
        <i class="fa fa-windows"></i>
      <% end %>
    </div>
  <% else %>
    <p class="AlsoAvailable">Also available on <%= link_to alternative, 'javascript:;', class: 'AlsoAvailable__link', onclick: "gtag_report_conversion('#{alternative_link}', '#{@download_type}')" %></p>
  <% end %>
<% elsif @product.mac %>
  <%= link_to 'DOWNLOAD FOR MAC', 'javascript:;', class: 'download-link', target: '_blank', onclick: "gtag_report_conversion('#{@download_link_mac}', '#{@download_type}')" %>
<% else %>
  <%= link_to 'DOWNLOAD FOR WINDOWS', 'javascript:;', class: 'download-link', target: '_blank', onclick: "gtag_report_conversion('#{@download_link_windows}', '#{@download_type}')" %>
<% end %>
