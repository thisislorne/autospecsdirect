<section id="solutions">
  <div class="background">
    <div class="container">
      <div class="row">
        <% @solutions.each do |solution| %>
          <div class="col-sm-6 col-md-4">
            <h4><%= solution.title.upcase %></h4>
            <div class="image-container">
              <%= image_tag '' %>
            </div>
            <h2><%= t("#{solution.slug}.solution.header") %></h2>
            <p><%= t("#{solution.slug}.solution.sub_header") %></p>
            <%= link_to 'LEARN MORE', product_path(solution.slug) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
