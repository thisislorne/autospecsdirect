<section class="solutions">
  <div class="background">
    <div class="container">
      <div class="row">
        <% @solutions.each do |solution| %>
          <div class="col-sm-6 col-md-4 Solution">
            <h4 class="Solution__title"><%= solution.title.upcase %></h4>
            <%= image_tag 'https://source.unsplash.com/random/350x250' %>
            <h2><%= t("#{solution.slug}.product.main_header") %></h2>
            <p><%= t("#{solution.slug}.product.sub_header") %></p>
            <%= link_to 'LEARN MORE', product_path(@os, solution.slug) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
