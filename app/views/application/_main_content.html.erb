<section id="mainContent">
  <div class="container">
    <div class="row">
      <%= render 'application/main_content/left' %>
      <div class="col-xl-4 right">
        <h2>Top Supplements</h2>
        <table id="sideTable">
          <tbody>
            <% @products.each_with_index do |product, index| %>
            <tr>
              <th><%= index + 1 %></th>
              <td>
                <div class="row">
                  <div class="col-4 left">
                    <div class="image-container">
                      <%= image_tag product[:image] %>
                    </div>
                  </div>
                  <div class="col-8">
                    <h1><%= product[:title] %></h1>
                    <p class="num-reviews"><%= product[:num_reviews] %> reviews</p>
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="brand-image-container">
                          <%= image_tag product[:brand_image], class: 'brand' %>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="review">
                          <%= image_tag 'star.png' %>
                          <span class="rating-container"><%= product[:rating] %><span class="grey">/5</span></span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
